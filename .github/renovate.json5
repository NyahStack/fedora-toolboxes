{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices",
    ":semanticCommits",
  ],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/image-versions(\\.[^.]+)?\\.(yaml|yml)$/"
      ],
      "matchStrings": [
        "image:\\s*(?<packageName>\\S+)\\s*tag:\\s*(?<currentValue>\\S+)\\s*digest:\\s*(?<currentDigest>sha256:[a-f0-9]+)"
      ],
      "datasourceTemplate": "docker"
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/build_files/versions\\.env$/"
      ],
      "matchStrings": [
        "#\\s*renovate:\\s*datasource=(?<datasource>\\S+)\\s+depName=(?<depName>\\S+)(?:\\s+versioning=(?<versioning>\\S+))?\\s*\\nDISTROBOX_REF=(?<currentValue>\\S+)"
      ]
    }
  ],
  "packageRules": [
    {
      "automerge": true,
      "matchUpdateTypes": ["pin", "pinDigest"]
    },
    {
      "enabled": false,
      "matchUpdateTypes": ["digest", "pinDigest", "pin"],
      "matchDepTypes": ["container"],
      "matchFileNames": [".github/workflows/**.yaml", ".github/workflows/**.yml", ".devcontainer/Containerfile"]
    },
    {
      "matchPackageNames": [
        "registry.fedoraproject.org/*",
        "ghcr.io/ublue-os/akmods-nvidia-open",
      ],
      "groupName": "images",
      "matchUpdateTypes": [
        "digest"
      ],
      "automerge": true
    },
    {
      "matchPackageNames": [
        "registry.fedoraproject.org/*",
        "ghcr.io/ublue-os/akmods-nvidia-open",
      ],
      "matchUpdateTypes": [
        "major",
        "minor",
        "patch"
      ],
      "enabled": false
    },
    {
      "matchPackageNames": [
        "quay.io/fedora/fedora"
      ],
      "matchFileNames": [
        ".devcontainer/Containerfile"
      ],
      "enabled": false
    },
    {
      "matchFileNames": [
        "build_files/versions.env"
      ],
      "matchPackageNames": [
        "89luca89/distrobox"
      ],
      "groupName": "distrobox",
      "automerge": true
    }
  ]
}
